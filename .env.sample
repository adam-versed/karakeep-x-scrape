# See https://docs.karakeep.app/configuration for more information
DATA_DIR=<path>
NEXTAUTH_SECRET=<secret>

# Apify Configuration for Enhanced X.com Scraping
APIFY_API_KEY=<your_apify_api_key>
APIFY_X_SCRAPER_ACTOR_ID=apify/twitter-scraper
ENABLE_ENHANCED_X_SCRAPING=false

# Google Gemini AI Configuration (alternative to OpenAI)
GEMINI_API_KEY=<your_gemini_api_key>
GEMINI_PROJECT_ID=<your_gcp_project_id>  # Optional, only needed for Google Cloud billing

# OpenAI Configuration (alternative to Gemini)
# OPENAI_API_KEY=<your_openai_api_key>
# OPENAI_BASE_URL=https://api.openai.com/v1  # Optional

# Ollama Configuration (for local models)
# OLLAMA_BASE_URL=http://localhost:11434

# Batch Processing Configuration for LLM Optimization
ENABLE_BATCH_DESCRIPTION_ENHANCEMENT=false  # Enable batching of bookmark description enhancement requests
DESCRIPTION_BATCH_SIZE=40                    # Maximum number of bookmarks to process in a single batch
DESCRIPTION_BATCH_TIMEOUT_MS=5000           # Timeout in milliseconds for collecting bookmarks into batches